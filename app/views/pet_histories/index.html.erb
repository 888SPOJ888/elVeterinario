<p id="notice"><%= notice %></p>

<h1>Pet Histories</h1>

<table>
  <thead>
    <tr>
      <th>Weight</th>
      <th>Heigth</th>
      <th>Description</th>
      <th>Pet</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pet_histories.each do |pet_history| %>
      <tr>
        <td><%= pet_history.weight %></td>
        <td><%= pet_history.heigth %></td>
        <td><%= pet_history.description %></td>
        <td><%= pet_history.pet %></td>
        <td><%= link_to 'Show', client_pet_pet_history_path(@client, @pet, pet_history) %></td>
        <td><%= link_to 'Edit', edit_client_pet_pet_history_path(@client, @pet, pet_history) %></td>
        <td><%= link_to 'Destroy', client_pet_pet_history_url(@client, @pet, pet_history), method: :delete, data: { confirm: 'Estas Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Historia de Mascota', new_client_pet_pet_history_path %>
<%= link_to 'Back', client_pet_path(@client, @pet) %>