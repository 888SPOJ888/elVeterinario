
<div class="shadow-lg p-4 mb-5 bg-white rounded">
    <h1 class="text-center" style="font-size:40px; text-shadow: 0.05em 0.1em 0.05em #333">DETALLE CLIENTE</h1>
    
    <% if notice.present? %>
      <div class="container mb-4 px-5 text-center">
        <div class="shadow-lg mx-5  alert alert-warning alert-dismissible fade show border border-info rounded-pill" role="alert" style="background:#d5e4a1;">
          <strong>ATENCION!</strong> <%= notice %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <p>
      <strong>NOMBRE:</strong>
      <%= @client.name %>
      </p>

      <p>
        <strong>TELEFONO:</strong>
        <%= @client.phone %>
      </p>

      <p>
        <strong>CORREO:</strong>
        <%= @client.email %>
      </p>
     

      <td><%= link_to 'Ver Mascotas', client_pets_path(@client), class:"btn btn-primary rounded-pill border border-white btn-sm text-center" %></td>
    </div>
    <hr>
    <div>
      <h3 class="text-center" style="font-size:20px; text-shadow: 0.05em 0.1em 0.05em #333">MASCOTAS CLIENTE</h3>
    </div>
    <div>
      <table class="shadow-lg table mt-3">
        <thead class="thead-dark text-center">
          <tr>
            <th>NOMBRE</th>
            <th>PESO MAXIMO</th>
            <th>ALTURA MAXIMA</th>
          </tr>
        </thead>

        <tbody class="text-center">
          <% @client.pets.each do |pet|%>
            <tr>
              <td><%= pet.name %></td>
              <td><%= pet.max_weight %></td>
              <td><%= pet.max_height %></td>              
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
        
    <div class="text-center pt-4">
      <%= link_to 'EDITAR', edit_client_path(@client), class:"btn btn-dark rounded-pill border border-white btn-sm text-center" %> |
      <%= link_to 'VOLVER', clients_path, class:"btn btn-dark rounded-pill border border-white btn-sm text-center" %>
    </div>
    
</div>