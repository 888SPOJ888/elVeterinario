<div class="shadow-lg p-4 mb-5 bg-white rounded">
 
  <% if notice.present? %>
    <div class="container mb-4 px-5 text-center">
      <div class="shadow-lg mx-5  alert alert-warning alert-dismissible fade show border border-info rounded-pill" role="alert" style="background:#d5e4a1;">
        <strong>ATENCION!</strong> <%= notice %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
  <% end %>

  <h1 class="text-center" style="font-size:40px; text-shadow: 0.05em 0.1em 0.05em #333">CLIENTES</h1>

  <table class="shadow-lg table mt-3">
    <thead class="thead-dark text-center">
      <tr>
        <th>NÂ° de Mascotas</th>
        <th>NOMBRE</th>
        <th>TELEFONO</th>
        <th>CORREO</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="text-center">
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.count_pet %></td>
          <td><%= client.name %></td>
          <td><%= client.phone %></td>
          <td><%= client.email %></td>
          <td><%= link_to 'VER', client, class:"btn btn-primary rounded-pill btn-sm text-white font-weight-bold" %></td>
          <td><%= link_to 'EDITAR', edit_client_path(client), class:"btn btn-warning rounded-pill btn-sm text-white font-weight-bold" %></td>
          <td><%= link_to 'ELIMINAR', client, method: :delete, data: { confirm: 'Estas Segur@?' }, class:"btn btn-danger rounded-pill btn-sm text-white font-weight-bold" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nuevo Cliente', new_client_path, class:"btn btn-success btn-lg btn-block rounded-pill text-white mt-3 border border-info"  %>
</div>