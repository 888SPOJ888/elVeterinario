<p id="notice"><%= notice %></p>
<td><%= link_to 'Ver Historial', client_pet_pet_histories_path(@client, @pet) %></td>
<p>
  <strong>Name:</strong>
  <%= @pet.name %>
</p>

<p>
  <strong>Race:</strong>
  <%= @pet.race %>
</p>

<p>
  <strong>Birthdate:</strong>
  <%= @pet.birthdate %>
</p>

<p>
  <strong>Client:</strong>
  <%= @pet.client %>
</p>

<h2>Historial</h2>
<table>
  <thead>
    <tr>
      <th>Altura</th>
      <th>Peso</th>
      <th>Descripcion</th>
      <th>Fecha</th>
    </tr>
  </thead>

  <tbody>
    <% @pet.pet_histories.each do |pet_history| %>
      <tr>
        <td><%= pet_history.heigth %></td>
        <td><%= pet_history.weight %></td>
        <td><%= pet_history.description %></td>
        <td><%= pet_history.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Informacion de Mascota</h2>
<table>
  <thead>
    <tr>
      <th>Peso Promedio</th>
      <th>Altura Promedio</th>
      <th>La altura Maxima</th>
      <th>El peso maximo</th>
    </tr>
  </thead>

  <tbody>   
      <tr>
        <td><%= @pet.avg_weight %></td>
        <td><%= @pet.avg_height %></td>
        <td><%= @pet.max_height %></td>
        <td><%= @pet.max_weight %></td>
      </tr>   
  </tbody>
</table>

