<div class="shadow-lg p-4 mb-5 bg-white rounded">
 
  <% if notice.present? %>
    <div class="container mb-4 px-5 text-center">
      <div class="shadow-lg mx-5  alert alert-warning alert-dismissible fade show border border-info rounded-pill" role="alert" style="background:#d5e4a1;">
        <strong>ATENCION!</strong> <%= notice %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
  <% end %>

  <h1 class="text-center" style="font-size:40px; text-shadow: 0.05em 0.1em 0.05em #333">MASCOTAS DE <%= @client.name.upcase%></h1>

  <table class="shadow-lg table mt-3">
    <thead class="thead-dark text-center">
      <tr>
        <th>NOMBRE</th>
        <th>RAZA</th>
        <th>FECHA NACIMIENTO</th>
        <th>VISITAS</th>
        <th>HISTORIAL</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="text-center">
        <% @pets.each do |pet| %>
        <tr>
          <td><%= pet.name %></td>
          <td><%= pet.race %></td>
          <td><%= pet.birthdate %></td>
          <td><%= pet.history_count %></td>
          <td>
              <% pet.pet_histories.each do |pet_history| %>
                <span><%= pet_history.description %></span> => <span><%= pet_history.created_at %></span><hr>
              <% end %>
          </td>
          <td><%= link_to 'VER', client_pet_path(@client, pet), class:"btn btn-primary rounded-pill btn-sm text-white font-weight-bold" %></td>
          <td><%= link_to 'EDITAR', edit_client_pet_path(@client, pet), class:"btn btn-warning rounded-pill btn-sm text-white font-weight-bold" %></td>
          <td><%= link_to 'ELIMINAR', client_pet_url(@client, pet), method: :delete, data: { confirm: 'Estas segur@?' }, class:"btn btn-danger rounded-pill btn-sm text-white font-weight-bold" %></td>        
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nueva Mascota', new_client_pet_path, class:"btn btn-success btn-lg btn-block rounded-pill text-white mt-3 border border-info"  %>
  <hr>
  <div class="text-center">
    <%= link_to 'VOLVER', client_path(@client), class:"btn btn-dark rounded-pill border border-white btn-sm text-center" %>
  </div>
</div>